{
  "name": "vsecure-analyzer-extension",
  "displayName": "vsecure-analyzer-extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vsecure-analyzer.runAnalysis"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsecure-analyzer.runAnalysis",
        "title": "Run VSecure Analyzer"
      },
      {
        "command": "vsecure-analyzer.applyFixCommand",
        "title": "Apply Fix from GPT"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "VSecure Analyzer",
      "properties": {
        "vsecureAnalyzer.serverUrl": {
          "type": "string",
          "default": "http://localhost:8000/analyze",
          "description": "Analyzer server URL"
        },
        "vsecureAnalyzer.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "vsecure-analyzer-view",
          "name": "VSecure Analyzer Results"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "vsecure-analyzer.applyFixCommand",
          "when": "view == vsecure-analyzer-view && viewItem == gptFixable",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "form-data": "^4.0.2",
    "fs-extra": "^11.3.0",
    "jszip": "^3.10.1"
  }
}
